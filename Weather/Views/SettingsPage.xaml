<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings">
                <TableRoot >
                    <TableSection Title="Temperature" >
                        <SwitchCell x:Name="celcius" OnChanged="clickedCelcius" Text="ºC" />
                        <SwitchCell x:Name="fahrenheit" OnChanged="clickedFahrenheit" Text="ºF" />
                    </TableSection>
                    <TableSection Title="Speed">
                        <SwitchCell x:Name="kph" OnChanged="clickedKph" Text="kph"/>
                        <SwitchCell x:Name="mph" OnChanged="clickedMph" Text="mph"/>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>